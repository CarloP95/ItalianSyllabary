<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Authors>Carlo Francesco Pellegrino</Authors>
    <Copyright>Copyright Â© 2022 Carlo Francesco Pellegrino</Copyright>
    <Description>An Italian Syllabary to split italian words in syllables</Description>
    <PackageProjectUrl>https://github.com/CarloP95/ItalianSyllabary</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/CarloP95/ItalianSyllabary</RepositoryUrl>
    <PackageTags>italian, syllables, dictionary</PackageTags>
    <Version>$(PackageVersion)</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\enrich.json" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\enrich.json" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
